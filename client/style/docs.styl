@import 'func'

body.examples, body.docs, html
  gradient(#E1EEF8, #fff, left, top, left, 200px)
  background-repeat no-repeat

section[role=main]
  margin 20px 2% 40px 200px
  max-width 810px
  img
    margin 20px 0
  
  p:first-child,
  p:first-of-type
    font-size 18px
    line-height 38px
    a
    strong
      font-size 18px
  .flow
    width 120px
    float left
    text-align center
    margin 10px 15px 15px 0
    h5
     display block
     background #00468C
     width 100%
     height 120px
     rounded 60px
     color #fff
     font-weight bold
     line-height 105px
     box-shadow #74A9DA -2px -4px 0
    p, a
     padding 3px
     font-size 11px !important
     line-height 15px
     

  pre
  blockquote
    line-height 20px
    padding 15px
    font-size 11px
    rounded 5px
    background-color #fff
    code
      padding 0
      background transparent
      border none
  code
    padding 1px 5px
    background #eee
    border 1px solid #ddd
      
  blockquote
    margin-right 90px
    font-style italic

.credit
  font-size 11px
  line-height 20px
  a
   font-size 11px