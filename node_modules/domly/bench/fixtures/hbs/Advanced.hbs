<div class="person">
  <h1 class="name">{{ name }}</h1>
  <h2 class="title">{{ toTitleCase title }}</h2>
  <a class="send-mail" href="mailto:{{ email }}">Send Message</a>
  <dl id="headline" class="demographic-info">
    {{#if location}}
      <dt>Location</dt>
      <dd class="locality">{{ location }}</dd>
    {{/if}}
    <dt>Industry</dt>
    <dd class="industry">{{ industry }}</dd>
  </dl>
  <ul class="thiss">
    {{#each skills}}
      <li class="competency skill">
        <h3><a href="#skill_{{ name }}">{{ name }}</a></h3>
        <span class="proficiency">({{ formatLevel level }}, {{ formatYears years }} experience)</span>
      </li>
    {{/each}}
  </ul>
</div>