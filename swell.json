{
  "name": "A New Swell App",
  "about": "About your app",
  "author": "you@email.com",
  "version": "0.2",
  "swell": ">= 0.2",
  "client": {
    "app":{
      "compiler": "coffee",
      "folders": [
        {
          "swell": "swell/client"
        },
        {
          "models": "models"
        },
        {
          "collections": "collections"
        },
        {
          "routers": "client/routers"
        },
        {
          "views": "client/views"
        }
      ],
      "output": "public/js/app.js",
      "extensions": [
        ".coffee"
      ]
    },
    "dust": {
      "compiler": "dust",
      "folders": "client/dust",
      "output": "public/js/tmpl.js",
      "extensions": [
        ".dust"
      ]
    },
    "style": {
      "compiler": "stylus",
      "folders": "client/style",
      "output": "public/styles.css",
      "extensions": [
        ".styl"
      ]
    },
    "deps": {
      "compiler": "deps",
      "folders": "client/vendor",
      "output": "public/js/deps.js",
      "extensions": [
        ".js"
      ]
    },
    "production": "public/js/production.js"
  },
  "server": {
    "routes": {
      "/": "Pages.index",
      "/page/:view": "Pages.page"
    },
    "resources": {
      "mongo-swell": {
        "engine": "mongo",
        "db": "swell",
        "host": "127.0.0.1",
        "port": "27017"
      },
      "mysql-flybook": {
        "engine": "mysql",
        "db": "flybook",
        "host": "216.228.174.155",
        "user": "fb-test",
        "password": "3XAmPl3!"
      },
      "mysql-swell": {
        "engine": "mysql",
        "db": "swell",
        "host": "127.0.0.1",
        "user": "swell",
        "password": "sw311!"
      }
    },
    "views": "views",
    "layout": "layouts/app",
    "enable_markdown": true,
    "port": 3030,
    "timeout": 7000,
    "cookie_hash": "cookie-hash-you-should-change",
    "cookie_secret": "cookie-secret-you-should-change",
    "socket_io": {
      "log level": 1,
      "namespace" : "/"
    },
    "coffee": {
      "compiler": "coffee",
      "folders": [
        {
          "swell": "swell/server"
        },
        {
          "models": "models"
        },
        {
          "collections": "collections"
        },
        {
          "responders": "responders"
        }
      ],
      "output": "server/swell.js",
      "extensions": [
        ".coffee"
      ],
      "exports": true
    }    
  }
}